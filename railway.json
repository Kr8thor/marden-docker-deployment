{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Using nixpacks builder'"
  },
  "deploy": {
    "startCommand": "sh -c 'cd frontend && npm install && npm run build && cd ../backend && npm install && npm start'",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 10
  }
}